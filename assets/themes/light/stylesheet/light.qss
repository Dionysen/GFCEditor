/* ------------- Light ----------------- */

QMainWindow {
  background-color: #f0f0f0;
}

#CustomWindow-Background {
  background-color: #e0e0e0;
}

/* TitleBar */
#titleBar {
  background-color: #e0e0e0;
}

#titleBtn {
  border: none;
  border-radius: 0;
}

#titleBtn:hover {
  background-color: #d0d0d0;
  border-radius: 0;
}

#titleBtn:pressed {
  background-color: #c0c0c0;
  border-radius: 0;
}

/* PushButton */
QPushButton {
  border-style: solid;
  border-color: #a0a0a0;
  border-width: 1px;
  border-radius: 2px;
  color: #333333;
  padding: 2px;
  background-color: #f0f0f0;
}

QPushButton::default {
  border-style: solid;
  border-color: #a0a0a0;
  border-width: 1px;
  border-radius: 2px;
  color: #000000;
  padding: 2px;
  background-color: #f0f0f0;
}

QPushButton:hover {
  background-color: #e0e0e0;
}

QPushButton:pressed {
  background-color: #d0d0d0;
}

QPushButton:disabled {
  color: #a0a0a0;
  background-color: #e0e0e0;
}

QGroupBox {
  color: #333333;
  border: 1px solid #a0a0a0;
}

/* 工具栏样式 */
QToolBar::handle {
  image: url(":/icon/light/drag.svg");
}

QToolBar::handle:vertical {
  image: url(":/icon/light/dragVer.svg");
}

QToolBar {
  background-color: #f0f0f0;
}

QToolButton:hover {
  background-color: #e0e0e0;
}

QToolButton:pressed {
  background-color: #d0d0d0;
}

QToolButton:checked {
  background-color: #d0d0d0;
}

/* 分隔符样式 */
QToolBar::separator {
  background-color: #c0c0c0;
}

QCalendar {
  background-color: #ffffff;
}

QTextEdit,
QLineEdit,
QPlainTextEdit {
  color: #333333;
  background-color: #ffffff;
  border: 1px solid #a0a0a0;
}

QLabel {
  color: #333333;
}

QLCDNumber {
  color: #000000;
}

QProgressBar {
  color: #333333;
  background-color: #e0e0e0;
}

QProgressBar::chunk {
  background-color: #4a90e2;
}

/* ================== Menubar ================ */
QMenuBar {
  background-color: #f0f0f0;
}

QMenuBar::item {
  color: #333333;
}

QMenuBar::item:hover {
  background-color: #e0e0e0;
}

QMenuBar::item:selected {
  background-color: #d0d0d0;
}

QMenu {
  background-color: #ffffff;
  border: 1px solid #a0a0a0;
}

QMenu::item {
  color: #333333;
}

QMenu::item:selected {
  background-color: #e0e0e0;
}

QTabWidget::pane {
  border: 1px solid #a0a0a0;
}

QTabBar::tab {
  color: #333333;
  background: #f0f0f0;
  border: 1px solid #a0a0a0;
}

QTabBar::tab:selected,
QTabBar::tab:hover {
  background: #e0e0e0;
}

QCheckBox,
QRadioButton {
  color: #333333;
}

QCheckBox::indicator:checked,
QRadioButton::indicator:checked {
  background-color: #4a90e2;
}

QStatusBar {
  color: #333333;
}

QSpinBox,
QDoubleSpinBox,
QTimeEdit,
QDateTimeEdit,
QDateEdit,
QFontComboBox {
  color: #333333;
  background-color: #ffffff;
  border: 1px solid #a0a0a0;
}

QComboBox {
  color: #333333;
  background-color: #ffffff;
  border: 1px solid #a0a0a0;
}

QComboBox::drop-down {
  background-color: #f0f0f0;
}

QComboBox QAbstractItemView {
  background-color: #ffffff;
  color: #333333;
  border: 1px solid #a0a0a0;
  selection-background-color: #e0e0e0;
  selection-color: #333333;
}

QDial {
  background: #f0f0f0;
}

QToolBox {
  color: #333333;
  background-color: #f0f0f0;
}

QScrollArea {
  color: #333333;
  background-color: #ffffff;
}

QSlider::groove:horizontal,
QSlider::groove:vertical {
  background-color: #e0e0e0;
}

QSlider::handle:horizontal,
QSlider::handle:vertical {
  background: #ffffff;
  border: 1px solid #a0a0a0;
}

QSlider::handle:horizontal:hover,
QSlider::handle:vertical:hover {
  background: #f0f0f0;
}

QSlider::add-page:horizontal,
QSlider::add-page:vertical {
  background: #e0e0e0;
}

QSlider::sub-page:horizontal,
QSlider::sub-page:vertical {
  background-color: #4a90e2;
}

/* 滚动条 */
QScrollBar:vertical,
QScrollBar:horizontal {
  background: #f0f0f0;
}

QScrollBar::handle:vertical,
QScrollBar::handle:horizontal {
  background: #c0c0c0;
}

QScrollBar::handle:vertical:hover,
QScrollBar::handle:horizontal:hover {
  background: #a0a0a0;
}

/* DockWidget 样式 */
QDockWidget {
  background-color: #f0f0f0;
  color: #333333;
  border: 1px solid #a0a0a0;
}

QDockWidget::title {
  background-color: #e0e0e0;
}

QDockWidget::close-button,
QDockWidget::float-button {
  background-color: #e0e0e0;
}

QDockWidget::close-button:hover,
QDockWidget::float-button:hover {
  background-color: #d0d0d0;
}

/* TreeView 样式 */
QTreeView {
  background-color: #ffffff;
  color: #333333;
  border: 1px solid #a0a0a0;
}

QTreeView::item:hover {
  background-color: #f0f0f0;
}

QTreeView::item:selected {
  background-color: #e0e0e0;
  color: #333333;
}

QTreeView::branch {
  color: #333333;
}

QTreeView::branch:has-children:!has-siblings:closed,
QTreeView::branch:closed:has-children:has-siblings {
  image: url(:/icon/light/branchClose.svg);
}

QTreeView::branch:open:has-children:!has-siblings,
QTreeView::branch:open:has-children:has-siblings {
  image: url(:/icon/light/branchOpen.svg);
}

/* TableView 样式 */
QTableView {
  background-color: #ffffff;
  color: #333333;
  border: 1px solid #a0a0a0;
  gridline-color: #e0e0e0;
}

QTableView::item:hover {
  background-color: #f0f0f0;
}

QTableView::item:selected {
  background-color: #e0e0e0;
  color: #333333;
}

QHeaderView {
  background-color: #f0f0f0;
  color: #333333;
}

QHeaderView::section {
  background-color: #f0f0f0;
  color: #333333;
  border: 1px solid #a0a0a0;
}

QHeaderView::section:hover {
  background-color: #e0e0e0;
}

QTableCornerButton::section {
  background-color: #f0f0f0;
  border: 1px solid #a0a0a0;
}

/* DialogWindow 样式 */
QDialog {
  background-color: #f0f0f0;
  color: #333333;
}

QDialog QLabel {
  color: #333333;
}

QDialog QPushButton {
  background-color: #f0f0f0;
  color: #333333;
  border: 1px solid #a0a0a0;
}

QDialog QPushButton:hover {
  background-color: #e0e0e0;
}

QDialog QPushButton:pressed {
  background-color: #d0d0d0;
}

/* ListView 样式 */
QListView {
  background-color: #ffffff;
  color: #333333;
  border: 1px solid #a0a0a0;
}

QListView::item:hover {
  background-color: #f0f0f0;
}

QListView::item:selected {
  background-color: #e0e0e0;
}
